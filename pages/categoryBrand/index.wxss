page {
  background-color: #f5f5f5;
}

/* ÊêúÁ¥¢Ê†èÊ†∑Âºè */
.search-container {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: #fff;
  border-bottom: 1rpx solid #e0e0e0;
}

.search-box {
  flex: 1;
  display: flex;
  align-items: center;
  padding: 15rpx 20rpx;
  background: #f8f9fa;
  border-radius: 50rpx;
  border: 1rpx solid #e0e0e0;
  margin-right: 20rpx;
}

.search-input {
  flex: 1;
  margin-left: 15rpx;
  font-size: 28rpx;
  border: none;
  outline: none;
  background: transparent;
}

.search-btn {
  padding: 15rpx 30rpx;
  background: #007aff;
  color: white;
  border-radius: 50rpx;
  font-size: 28rpx;
  font-weight: bold;
}

.search-btn:active {
  background: #0056b3;
}

/* Á≠õÈÄâÊ†èÊ†∑Âºè */
.filter-container {
  display: flex;
  background: #fff;
  border-bottom: 1rpx solid #e0e0e0;
}

.filter-item {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 25rpx;
  border-right: 1rpx solid #e0e0e0;
  font-size: 28rpx;
  color: #333;
  position: relative;
}

.filter-item:last-child {
  border-right: none;
}

.filter-item:active {
  background: #f8f9fa;
}

.arrow-down {
  margin-left: 10rpx;
  font-size: 24rpx;
  color: #999;
}

/* ‰π¶Á±çÂàóË°®ÂÆπÂô® */
.books-container {
  padding: 20rpx;
}

.loading, .empty {
  text-align: center;
  padding: 100rpx 20rpx;
  color: #999;
  font-size: 28rpx;
}

.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.empty::before {
  content: 'üìö';
  font-size: 80rpx;
  margin-bottom: 20rpx;
  opacity: 0.5;
}

/* ‰π¶Á±çÁΩëÊ†ºÂ∏ÉÂ±Ä */
.books-grid {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.book-card {
  width: 48%;
  background: #fff;
  border-radius: 15rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
  overflow: hidden;
  transition: all 0.3s ease;
}

.book-card:active {
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.15);
}

.book-image {
  width: 100%;
  height: 200rpx;
  background: #f8f9fa;
}

.book-info {
  padding: 20rpx;
}

.book-title {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.book-author {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 15rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.book-price {
  font-size: 30rpx;
  color: #ff4d4f;
  font-weight: bold;
  margin-bottom: 15rpx;
}

.book-actions {
  display: flex;
  justify-content: center;
}

.add-to-cart {
  background: linear-gradient(135deg, #007aff 0%, #0056b3 100%);
  color: white;
  text-align: center;
  padding: 12rpx 30rpx;
  border-radius: 8rpx;
  font-size: 26rpx;
  font-weight: bold;
  transition: all 0.3s ease;
}

.add-to-cart:active {
  transform: scale(0.95);
  background: linear-gradient(135deg, #0056b3 0%, #004085 100%);
}

/* Á≠õÈÄâÂºπÁ™óÊ†∑Âºè */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  animation: fadeIn 0.3s ease;
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

.filter-modal {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  max-height: 60%;
  background: white;
  border-radius: 20rpx 20rpx 0 0;
  z-index: 1001;
  animation: slideUp 0.3s ease;
}

@keyframes slideUp {
  from { 
    transform: translateY(100%);
  }
  to { 
    transform: translateY(0);
  }
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #e0e0e0;
  background: #f8f9fa;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.close-btn {
  font-size: 40rpx;
  color: #999;
  padding: 0 10rpx;
  cursor: pointer;
}

.filter-options {
  max-height: 400rpx;
  overflow-y: auto;
}

.filter-option {
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  font-size: 30rpx;
  color: #333;
  transition: all 0.3s ease;
  position: relative;
}

.filter-option:last-child {
  border-bottom: none;
}

.filter-option:active {
  background: #f8f9fa;
}

.filter-option.active {
  color: #007aff;
  background: #f0f8ff;
}

.filter-option.active::after {
  content: '‚úì';
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  color: #007aff;
  font-weight: bold;
}
