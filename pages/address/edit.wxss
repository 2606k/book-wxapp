/* pages/address/edit.wxss */
page {
  background-color: #f5f5f5;
  height: 100vh;
}

.edit-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
}

/* 表单内容区域 */
.form-content {
  flex: 1;
  overflow-y: auto;
  padding: 20rpx;
}

.form-section {
  background: #fff;
  border-radius: 15rpx;
  margin-bottom: 20rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
  border-left: 4rpx solid #007aff;
  padding-left: 20rpx;
}

.form-item {
  margin-bottom: 30rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 15rpx;
  font-weight: 500;
}

.required::before {
  content: '*';
  color: #ff4d4f;
  margin-right: 5rpx;
  font-weight: bold;
}

.input {
  width: 100%;
  padding: 25rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 10rpx;
  font-size: 30rpx;
  background: #f8f9fa;
  box-sizing: border-box;
  transition: border-color 0.3s ease;
}

.input:focus {
  border-color: #007aff;
  background: #fff;
}

.input::placeholder {
  color: #999;
}

/* 地址输入组 */
.address-input-group {
  position: relative;
}

.address-input {
  width: 100%;
  min-height: 120rpx;
  padding: 25rpx;
  padding-right: 120rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 10rpx;
  font-size: 30rpx;
  background: #f8f9fa;
  box-sizing: border-box;
  transition: border-color 0.3s ease;
  line-height: 1.5;
}

.address-input:focus {
  border-color: #007aff;
  background: #fff;
}

.address-input::placeholder {
  color: #999;
}

.location-btn {
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 15rpx;
  background: #007aff;
  color: white;
  border-radius: 10rpx;
  font-size: 24rpx;
  transition: all 0.3s ease;
}

.location-btn:active {
  background: #0056b3;
  transform: translateY(-50%) scale(0.95);
}

.location-icon {
  font-size: 28rpx;
  margin-bottom: 5rpx;
}

.location-text {
  font-size: 22rpx;
}

/* 默认地址设置 */
.default-setting {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
}

.default-label {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
}

.default-switch {
  transform: scale(1.2);
}

/* 底部保存按钮 */
.save-btn-container {
  padding: 30rpx 40rpx;
  background: #fff;
  border-top: 1rpx solid #e0e0e0;
}

.save-btn {
  width: 100%;
  background: linear-gradient(135deg, #007aff 0%, #0056b3 100%);
  color: white;
  border-radius: 15rpx;
  padding: 35rpx;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
  transition: all 0.3s ease;
}

.save-btn:active {
  background: linear-gradient(135deg, #0056b3 0%, #004085 100%);
  transform: scale(0.98);
}
