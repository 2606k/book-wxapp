/* pages/address/index.wxss */
page {
  background-color: #f5f5f5;
  height: 100vh;
}

.address-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
}

/* 内容区域 */
.address-content {
  flex: 1;
  overflow-y: auto;
  padding: 20rpx 0;
}

.loading {
  text-align: center;
  padding: 100rpx 20rpx;
  color: #999;
  font-size: 28rpx;
}

/* 空地址样式 */
.empty-address {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 150rpx 40rpx;
  text-align: center;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 40rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 30rpx;
  color: #999;
  margin-bottom: 50rpx;
}

.add-btn {
  background: linear-gradient(135deg, #007aff 0%, #0056b3 100%);
  color: white;
  border-radius: 50rpx;
  padding: 25rpx 60rpx;
  font-size: 30rpx;
  font-weight: bold;
  border: none;
}

.add-btn:active {
  background: linear-gradient(135deg, #0056b3 0%, #004085 100%);
}

/* 地址列表样式 */
.address-list {
  padding: 0 20rpx;
}

.address-item {
  background: #fff;
  border-radius: 15rpx;
  margin-bottom: 20rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.address-item.selectable:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.15);
}

.address-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.user-info {
  display: flex;
  align-items: center;
}

.user-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-right: 20rpx;
}

.user-phone {
  font-size: 28rpx;
  color: #666;
}

.default-tag {
  background: #007aff;
  color: white;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
}

.address-detail {
  margin-bottom: 30rpx;
}

.address-text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
}

.address-actions {
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-top: 1rpx solid #f0f0f0;
  padding-top: 20rpx;
}

.action-left {
  display: flex;
  align-items: center;
}

.set-default {
  display: flex;
  align-items: center;
  padding: 10rpx;
}

.set-default.disabled {
  opacity: 0.6;
  pointer-events: none;
}

.default-text {
  font-size: 26rpx;
  color: #666;
  margin-left: 10rpx;
}

.action-right {
  display: flex;
  align-items: center;
}

.edit-btn, .delete-btn {
  padding: 15rpx 25rpx;
  border-radius: 8rpx;
  font-size: 26rpx;
  margin-left: 20rpx;
}

.edit-btn {
  background: #f0f8ff;
  color: #007aff;
}

.edit-btn:active {
  background: #e6f3ff;
}

.delete-btn {
  background: #fff5f5;
  color: #ff4d4f;
}

.delete-btn:active {
  background: #ffe6e6;
}

/* 选择模式样式 */
.select-indicator {
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-top: 1rpx solid #f0f0f0;
  padding-top: 20rpx;
}

.select-text {
  font-size: 28rpx;
  color: #007aff;
  font-weight: 500;
}

.arrow {
  font-size: 30rpx;
  color: #007aff;
}

/* 底部添加按钮 */
.add-address-btn {
  padding: 30rpx 40rpx;
  background: #fff;
  border-top: 1rpx solid #e0e0e0;
}

.add-new-btn {
  width: 100%;
  background: linear-gradient(135deg, #007aff 0%, #0056b3 100%);
  color: white;
  border-radius: 15rpx;
  padding: 30rpx;
  font-size: 30rpx;
  font-weight: bold;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.add-new-btn:active {
  background: linear-gradient(135deg, #0056b3 0%, #004085 100%);
}

.add-icon {
  font-size: 36rpx;
  margin-right: 15rpx;
}
