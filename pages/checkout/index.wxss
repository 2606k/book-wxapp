/* pages/checkout/index.wxss */
page {
  background-color: #f5f5f5;
  height: 100vh;
}

.checkout-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  padding-bottom: 150rpx;
}

/* 收货地址区域 */
.address-section {
  background: #fff;
  margin-bottom: 20rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.no-address {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 0;
}

.address-icon {
  font-size: 32rpx;
  margin-right: 20rpx;
}

.no-address-text {
  flex: 1;
  font-size: 30rpx;
  color: #999;
}

.arrow {
  font-size: 30rpx;
  color: #ccc;
}

.address-info {
  padding: 10rpx 0;
}

.address-header {
  display: flex;
  align-items: center;
  margin-bottom: 15rpx;
}

.user-info {
  flex: 1;
  margin-left: 20rpx;
}

.user-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-right: 20rpx;
}

.user-phone {
  font-size: 28rpx;
  color: #666;
}

.address-detail {
  margin-left: 52rpx;
}

.address-text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
}

/* 商品列表区域 */
.goods-section {
  background: #fff;
  margin-bottom: 20rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.goods-count {
  font-size: 26rpx;
  color: #999;
}

.goods-list {
  /* 商品列表容器 */
}

.goods-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f8f8f8;
}

.goods-item:last-child {
  border-bottom: none;
}

.goods-image {
  width: 120rpx;
  height: 120rpx;
  margin-right: 20rpx;
  border-radius: 8rpx;
  overflow: hidden;
  background: #f8f9fa;
}

.goods-image image {
  width: 100%;
  height: 100%;
}

.goods-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 120rpx;
}

.goods-name {
  font-size: 28rpx;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  line-height: 1.4;
  margin-bottom: 15rpx;
}

.goods-price-qty {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.goods-price {
  font-size: 30rpx;
  color: #ff4d4f;
  font-weight: bold;
}

.goods-qty {
  font-size: 26rpx;
  color: #999;
}

/* 订单备注区域 */
.remark-section {
  background: #fff;
  margin-bottom: 20rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.remark-input {
  width: 100%;
  min-height: 120rpx;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 10rpx;
  font-size: 28rpx;
  border: 1rpx solid #e0e0e0;
  box-sizing: border-box;
  margin-top: 20rpx;
}

.remark-input::placeholder {
  color: #999;
}

/* 费用明细区域 */
.cost-section {
  background: #fff;
  margin-bottom: 20rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.cost-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15rpx 0;
}

.cost-label {
  font-size: 28rpx;
  color: #666;
}

.cost-value {
  font-size: 28rpx;
  color: #333;
}

.cost-value.free {
  color: #52c41a;
}

.cost-divider {
  height: 1rpx;
  background: #f0f0f0;
  margin: 15rpx 0;
}

.cost-item.total .cost-label {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.cost-item.total .cost-value {
  font-size: 32rpx;
  font-weight: bold;
  color: #ff4d4f;
}

/* 底部提交栏 */
.submit-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 40rpx;
  background: #fff;
  border-top: 1rpx solid #e0e0e0;
  box-shadow: 0 -2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.total-info {
  display: flex;
  align-items: baseline;
}

.total-text {
  font-size: 28rpx;
  color: #666;
}

.total-amount {
  font-size: 36rpx;
  color: #ff4d4f;
  font-weight: bold;
}

.submit-btn {
  padding: 25rpx 60rpx;
  background: linear-gradient(135deg, #007aff 0%, #0056b3 100%);
  color: white;
  border-radius: 50rpx;
  font-size: 30rpx;
  font-weight: bold;
  border: none;
  transition: all 0.3s ease;
}

.submit-btn:active:not(.submitting) {
  background: linear-gradient(135deg, #0056b3 0%, #004085 100%);
}

.submit-btn.submitting {
  background: #ccc;
  pointer-events: none;
}
