<!-- 书籍分类区域 -->
<view class="category-container">
  <view class="category-title">图书最新分类</view>
  <view class="category-grid">
    <view class="category-item" 
          wx:for="{{categories}}" 
          wx:key="id" 
          bindtap="goToCategory" 
          data-id="{{item.id}}" 
          data-name="{{item.categoryName}}">
      <image src='{{item.imageUrl || "https://img.alicdn.com/imgextra/i1/2206678097909/O1CN01v5J5J61L3Q8XpGqv7_!!2206678097909-0-cib.jpg"}}' mode="aspectFill"></image>
      <view class="category-name">{{item.categoryName}}</view>
    </view>
  </view>
</view>

<!-- 热门推荐 -->
<view class="recommend-section">
  <view class="section-title">热门推荐</view>
  <scroll-view class="recommend-scroll" scroll-x>
    <view class="recommend-list">
      <view class="book-item" wx:for="{{recommendBooks}}" wx:key="id" bindtap="goToBookDetail" data-book="{{item}}">
        <image class="book-cover" src="{{item.imageUrl}}" mode="aspectFit"></image>
        <view class="book-info">
          <view class="book-title">{{item.name}}</view>
          <view class="book-author">{{item.author}}</view>
          <view class="book-price-wrapper">
          <text class="book-price">¥{{(item.discountPrice || item.price) / 100}}</text>
          <text wx:if="{{item.discountPrice && item.discountPrice < item.price}}" class="book-original-price">¥{{item.price / 100}}</text>
        </view>
        </view>
      </view>
    </view>
  </scroll-view>
</view>

<!-- 新书上架 -->
<view class="new-books-section">
  <view class="section-title">新书上架</view>
  <view class="books-grid">
    <view class="book-card" wx:for="{{newBooks}}" wx:key="id" bindtap="goToBookDetail" data-book="{{item}}">
      <image class="book-image" src="{{item.imageUrl}}" mode="aspectFit"></image>
      <view class="book-details">
        <view class="book-name">{{item.name}}</view>
        <view class="book-author">{{item.author}}</view>
        <view class="book-price-wrapper">
          <text class="book-price">¥{{(item.discountPrice || item.price) / 100}}</text>
          <text wx:if="{{item.discountPrice && item.discountPrice < item.price}}" class="book-original-price">¥{{item.price / 100}}</text>
        </view>
        <view class="add-to-cart" catchtap="addToCart" data-book="{{item}}">
          <text>加入购物车</text>
        </view>
      </view>
    </view>
  </view>
</view>



