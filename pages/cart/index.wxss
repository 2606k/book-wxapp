/* pages/cart/index.wxss */
page {
  background-color: #f5f5f5;
  height: 100vh;
}

.cart-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
}

/* 头部样式 */
.cart-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 40rpx;
  background: #fff;
  border-bottom: 1rpx solid #e0e0e0;
}

.header-left {
  display: flex;
  align-items: baseline;
}

.cart-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.cart-count {
  font-size: 28rpx;
  color: #999;
  margin-left: 10rpx;
}

.edit-btn {
  font-size: 30rpx;
  color: #007aff;
  padding: 10rpx 20rpx;
}

.edit-btn:active {
  background: #f0f8ff;
  border-radius: 8rpx;
}

/* 内容区域 */
.cart-content {
  flex: 1;
  overflow-y: auto;
}

.loading {
  text-align: center;
  padding: 100rpx 20rpx;
  color: #999;
  font-size: 28rpx;
}

/* 空购物车样式 */
.empty-cart {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 150rpx 40rpx;
  text-align: center;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 40rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 30rpx;
  color: #999;
  margin-bottom: 50rpx;
}

.continue-btn {
  background: linear-gradient(135deg, #007aff 0%, #0056b3 100%);
  color: white;
  border-radius: 50rpx;
  padding: 25rpx 60rpx;
  font-size: 30rpx;
  font-weight: bold;
  border: none;
}

.continue-btn:active {
  background: linear-gradient(135deg, #0056b3 0%, #004085 100%);
}

/* 购物车列表样式 */
.cart-list {
  padding: 20rpx 0;
}

.cart-item {
  display: flex;
  align-items: center;
  padding: 30rpx 40rpx;
  background: #fff;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.item-select {
  margin-right: 30rpx;
  padding: 10rpx;
}

.item-image {
  width: 150rpx;
  height: 150rpx;
  margin-right: 30rpx;
  border-radius: 10rpx;
  overflow: hidden;
  background: #f8f9fa;
}

.item-image image {
  width: 100%;
  height: 100%;
}

.item-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 150rpx;
}

.item-name {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  line-height: 1.4;
  margin-bottom: 20rpx;
}

.item-price-wrapper {
  display: flex;
  align-items: center;
  gap: 10rpx;
  margin-bottom: 20rpx;
}

.item-price {
  font-size: 32rpx;
  color: #ff4d4f;
  font-weight: bold;
}

.item-original-price {
  font-size: 24rpx;
  color: #999;
  text-decoration: line-through;
}

.item-actions {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

/* 数量控制 */
.quantity-control {
  display: flex;
  align-items: center;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  overflow: hidden;
}

.quantity-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f8f9fa;
  color: #333;
  font-size: 32rpx;
  font-weight: bold;
  transition: all 0.3s ease;
}

.quantity-btn.disabled {
  color: #ccc;
  pointer-events: none;
}

.quantity-btn:active {
  background: #e9ecef;
}

.quantity-text {
  width: 80rpx;
  text-align: center;
  font-size: 28rpx;
  color: #333;
  background: #fff;
  height: 60rpx;
  line-height: 60rpx;
  border-left: 1rpx solid #e0e0e0;
  border-right: 1rpx solid #e0e0e0;
}

.delete-btn {
  padding: 15rpx 25rpx;
  background: #ff4d4f;
  color: white;
  border-radius: 8rpx;
  font-size: 26rpx;
}

.delete-btn:active {
  background: #ff3333;
}

/* 底部结算栏 */
.cart-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 40rpx;
  background: #fff;
  border-top: 1rpx solid #e0e0e0;
  box-shadow: 0 -2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.footer-left {
  display: flex;
  align-items: center;
}

.select-all {
  display: flex;
  align-items: center;
  margin-right: 40rpx;
}

.select-all-text {
  font-size: 28rpx;
  color: #333;
  margin-left: 15rpx;
}

.clear-cart {
  padding: 15rpx 25rpx;
  background: #ff4d4f;
  color: white;
  border-radius: 8rpx;
  font-size: 26rpx;
}

.clear-cart:active {
  background: #ff3333;
}

.footer-right {
  display: flex;
  align-items: center;
}

.total-info {
  margin-right: 30rpx;
}

.total-text {
  font-size: 28rpx;
  color: #666;
}

.total-amount {
  font-size: 32rpx;
  color: #ff4d4f;
  font-weight: bold;
}

.checkout-btn {
  padding: 25rpx 50rpx;
  border-radius: 50rpx;
  font-size: 30rpx;
  font-weight: bold;
  border: none;
  transition: all 0.3s ease;
}

.checkout-btn.active {
  background: linear-gradient(135deg, #007aff 0%, #0056b3 100%);
  color: white;
}

.checkout-btn.disabled {
  background: #f0f0f0;
  color: #999;
}

.checkout-btn.active:active {
  background: linear-gradient(135deg, #0056b3 0%, #004085 100%);
}
