.order-detail {
  padding: 16rpx 24rpx;
  background: #f6f7fb;
  min-height: 100vh;
  padding-bottom: 120rpx;
}

/* 状态卡片 */
.status-card {
  background: #fff;
  border-radius: 12rpx;
  padding: 32rpx 24rpx;
  margin-bottom: 24rpx;
  text-align: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.status-badge {
  display: inline-block;
  padding: 12rpx 32rpx;
  border-radius: 40rpx;
  color: #fff;
  font-size: 28rpx;
  font-weight: 600;
}

.section {
  margin-bottom: 24rpx;
  background: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: 600;
  margin-bottom: 16rpx;
}

.empty {
  color: #999;
  font-size: 26rpx;
}

.item-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 16rpx 0;
  border-bottom: 1px solid #f0f0f0;
}

.item-row:last-child {
  border-bottom: none;
}

.book-name {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.price {
  width: 160rpx;
  text-align: right;
  color: #ff4d4f;
}

.qty {
  width: 100rpx;
  text-align: right;
  color: #666;
}

.kv {
  display: flex;
  padding: 10rpx 0;
  font-size: 26rpx;
}

.k {
  width: 160rpx;
  color: #666;
}

.v {
  flex: 1;
  color: #333;
  text-align: right;
}

.v.amount {
  color: #ff4d4f;
  font-weight: 600;
  font-size: 28rpx;
}

/* 底部操作按钮 */
.action-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  padding: 24rpx 40rpx;
  box-shadow: 0 -2rpx 8rpx rgba(0, 0, 0, 0.1);
  display: flex;
  justify-content: flex-end;
  gap: 20rpx;
}

.refund-btn {
  padding: 20rpx 48rpx;
  background: #ff4d4f;
  color: #fff;
  border-radius: 50rpx;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
}

.refund-btn:active {
  opacity: 0.8;
}


