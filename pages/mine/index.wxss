/* pages/mine/index.wxss */
page {
  background-color: #f5f5f5;
}

/* 用户信息头部 */
.user-header {
  background: linear-gradient(135deg, #007aff 0%, #0056b3 100%);
  padding: 60rpx 40rpx 40rpx;
  text-align: center;
  color: white;
}

.user-info-btn {
  background: transparent;
  border: none;
  color: white;
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  padding: 0;
  margin: 0;
  line-height: normal;
}

.user-info-btn::after {
  border: none;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  margin-bottom: 20rpx;
}

.nickname {
  font-size: 32rpx;
  font-weight: bold;
  color: white;
}

/* 功能菜单区域 */
.menu-section {
  background: #fff;
  margin: 20rpx;
  border-radius: 15rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
}

.menu-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 35rpx 40rpx;
  border-bottom: 1rpx solid #f0f0f0;
  transition: background-color 0.3s ease;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item:active {
  background-color: #f8f9fa;
}

.menu-left {
  display: flex;
  align-items: center;
}

.menu-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 25rpx;
}

.menu-text {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
}

.arrow {
  font-size: 30rpx;
  color: #ccc;
}

/* 退出登录区域 */
.logout-section {
  padding: 40rpx;
}

.logout-btn {
  width: 100%;
  background: #fff;
  color: #ff4d4f;
  border: 1rpx solid #ff4d4f;
  border-radius: 15rpx;
  padding: 30rpx;
  font-size: 30rpx;
  font-weight: bold;
  transition: all 0.3s ease;
}

.logout-btn:active {
  background: #fff5f5;
}