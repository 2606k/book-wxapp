<!--pages/mine/index.wxml-->

<!-- 用户信息头部 -->
<view class="user-header">
  <button class='user-info-btn' open-type="getUserInfo" bindgetuserinfo="bindGetUserInfo">
    <image src="{{avatarUrl}}" class='avatar'></image>
    <text class="nickname">{{nickName}}</text>
  </button>
</view>

<!-- 功能菜单 -->
<view class="menu-section">
  <view class="menu-item" bindtap="goToAddressManage">
    <view class='menu-left'>
      <image class="menu-icon" src="/assets/imgs/mine/wodedizhi.png" />
      <text class="menu-text">地址管理</text>
    </view>
    <text class='arrow'>></text>
  </view>
  
  <view class="menu-item" bindtap="goToHelp">
    <view class="menu-left">
      <image class="menu-icon" src="/assets/imgs/mine/bangzhu.png" />
      <text class="menu-text">帮助中心</text>
    </view>
    <text class='arrow'>></text>
  </view>
  
  <view class="menu-item" bindtap="goToProtocol">
    <view class="menu-left">
      <image class="menu-icon" src="/assets/imgs/mine/yonghuxieyi.png" />
      <text class="menu-text">用户协议</text>
    </view>
    <text class='arrow'>></text>
  </view>
</view>

<!-- 退出登录按钮 -->
<view class="logout-section" wx:if="{{nickName !== '立即登录'}}">
  <button class="logout-btn" bindtap="logout">退出登录</button>
</view>

